@using Microsoft.AspNetCore.Identity

@inject MyOnlineShop.Common.Services.ICurrentUserService CurrentUserService

<ul class="navbar-nav">
    @if (!string.IsNullOrWhiteSpace(this.CurrentUserService.UserId))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index" title="Manage">Hello @this.CurrentUserService.Username!</a>
        </li>
        <li class="nav-item">
            <form method="post" id="logoutForm" class="form-inline" asp-area="" asp-controller="Identity" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Products", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="" asp-controller="Identity" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="" asp-controller="Identity" asp-action="Login">Login</a>
        </li>
    }
</ul>
