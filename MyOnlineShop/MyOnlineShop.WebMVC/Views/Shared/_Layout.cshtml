@inject MyOnlineShop.Common.Services.ICurrentUserService CurrentUserService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyOnlineShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Products" asp-action="Index">MyOnlineShop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    @if (this.CurrentUserService.IsAdministrator)
                    {
                        <ul class="navbar-nav flex-grow-1">

                            <li class="nav-item dropdown">
                                <a href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="AdminAreaNavbarDropdown" class="nav-link dropdown-toggle text-dark">
                                    Admin Area
                                </a>
                                <div class="dropdown-menu" aria-labelledby="AdminAreaNavbarDropdown">
                                    <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="dropdown-item">Manage Products</a>
                                    <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="dropdown-item">Manage Categories</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="ShoppingCarts" asp-action="Index" class="nav-link text-dark">Shopping Cart (<vc:cart-items-count></vc:cart-items-count>)</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Orders" asp-action="Index" class="nav-link text-dark">My Orders</a>
                            </li>
                        </ul>
                    }
                    else if(!string.IsNullOrWhiteSpace(this.CurrentUserService.UserId))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="ShoppingCarts" asp-action="Index" class="nav-link text-dark">Shopping Cart (<vc:cart-items-count></vc:cart-items-count>)</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Orders" asp-action="Index" class="nav-link text-dark">My Orders</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - MyOnlineShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
